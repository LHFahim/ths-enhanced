<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.3" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fahim.ths.controller.StaffController">

  <top>
    <HBox spacing="10" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
      <Label text="Staff Portal â€” Manage Appointments"
             style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
      <Button text="Logout" onAction="#logout"/>
    </HBox>
  </top>

  <center>
    <TableView fx:id="apptTable" prefHeight="250">
      <columns>
        <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
        <TableColumn fx:id="patientCol" text="Patient" prefWidth="140"/>
        <TableColumn fx:id="doctorCol" text="Doctor" prefWidth="140"/>
        <TableColumn fx:id="timeCol" text="Start Time" prefWidth="180"/>
        <TableColumn fx:id="locationCol" text="Location" prefWidth="160"/>
        <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
      </columns>
    </TableView>
  </center>

  <bottom>
    <GridPane hgap="10" vgap="10">
      <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

      <Label text="Appointment ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
      <TextField fx:id="apptIdField" promptText="Select or enter ID"
                 GridPane.columnIndex="1" GridPane.rowIndex="0"/>

      <Label text="New Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

      <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <HBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Spinner fx:id="hourSpinner" prefWidth="80"/>
        <Spinner fx:id="minuteSpinner" prefWidth="80"/>
      </HBox>

      <Label text="New Location:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
      <TextField fx:id="locationField" promptText="Clinic / Online / etc"
                 GridPane.columnIndex="1" GridPane.rowIndex="3"/>

      <Button text="Apply Change" onAction="#changeBooking"
              GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
  </bottom>
</BorderPane>
