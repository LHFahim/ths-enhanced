<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fahim.ths.controller.MessagesController"
            prefWidth="960" prefHeight="620">
    <children>
        <VBox spacing="8" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <!-- Header -->
            <HBox spacing="8">
                <Label text="You:"/>
                <Label fx:id="currentUserLabel" style="-fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="To (email):"/>
                <TextField fx:id="peerEmailField" promptText="e.g., alice@example.com" prefWidth="260"/>
                <Button text="Load" onAction="#onLoadThread"/>
            </HBox>

            <!-- Thread list -->
            <ListView fx:id="messagesList" prefHeight="420"/>

            <!-- Compose -->
            <Label text="Message:"/>
            <TextArea fx:id="composeArea" prefRowCount="3"/>

            <HBox spacing="8">
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Send" onAction="#onSend"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
